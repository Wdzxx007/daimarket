<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_text"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/contentView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <View style="@style/gray_line_1px_horizontal" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/ll_main_page_home"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="5dp">

            <ImageView
                android:id="@+id/imgTabHome"
                android:layout_width="28dp"
                android:layout_height="26dp"
                android:paddingTop="5dp"
                android:src="@mipmap/icon_home_select" />

            <TextView
                android:id="@+id/tvTabHome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="@string/main_tab_home"
                android:textColor="@color/main_tab_home_selcet_text"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_main_page_borrow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="5dp">

            <ImageView
                android:id="@+id/imgTabBorrow"
                android:layout_width="28dp"
                android:layout_height="26dp"
                android:paddingTop="5dp"
                android:src="@mipmap/icon_dai_unselect" />

            <TextView
                android:id="@+id/tvTabBorrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="@string/main_tab_borrow"
                android:textColor="@color/main_tab_home_unselcet_text"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_main_page_charge"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="5dp">


            <ImageView
                android:id="@+id/imgTabCharge"
                android:layout_width="28dp"
                android:layout_height="26dp"
                android:paddingTop="5dp"
                android:src="@mipmap/icon_charge_unselect" />


            <TextView
                android:id="@+id/lblTabCharge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="@string/main_tab_charge"
                android:textColor="@color/main_tab_home_unselcet_text"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_main_page_mine"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="5dp">

            <ImageView
                android:id="@+id/imgTabMine"
                android:layout_width="28dp"
                android:layout_height="26dp"
                android:paddingTop="5dp"
                android:src="@mipmap/icon_mine_unselect" />

            <TextView
                android:id="@+id/tvTabMine"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="@string/main_tab_me"
                android:textColor="@color/main_tab_home_unselcet_text"
                android:textSize="12sp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
