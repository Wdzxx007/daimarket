<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black_null_background">

    <LinearLayout
        android:layout_width="268dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/radius_button_style"
        android:orientation="vertical"
        android:paddingTop="10dp">

        <TextView
            android:id="@+id/lblText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:text="输入图形验证码"
            android:textSize="16sp"
            android:textColor="@color/check_view_black" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="17dp"
            android:layout_marginBottom="17dp"
           >

            <EditText
                android:background="@color/check_view_edt_color"
                android:id="@+id/edt_check_codes"
                android:layout_width="0dp"
                android:layout_weight="7"
                android:layout_height="match_parent"
                android:hint="请输入右侧验证码"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/img_showCode"
                android:layout_width="0dp"
                android:layout_weight="3"
                android:scaleType="fitXY"
                android:layout_height="match_parent" />
        </LinearLayout>

        <View style="@style/gray_line_1px_horizontal" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnCancel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@null"
                android:padding="10dp"
                android:textSize="16sp"
                android:text="@string/cancel"
                android:textColor="@color/check_view_black" />
            <Button
                android:id="@+id/btnSure"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:padding="10dp"
                android:textSize="16sp"
                android:text="@string/sure"
                android:textColor="@color/check_view_color" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>